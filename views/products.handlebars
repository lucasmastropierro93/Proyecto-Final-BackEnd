{{#each products}}
<div class="container text-center">
  <div class="row justify-content-md-center">
    <div class="col col-md-2">
      <div class="card" style="width: 18rem;">

    <div class="card-body">
      <h5 class="card-title">{{this.title}}</h5>
      <p class="card-text">Descripcion: {{this.description}}</p>
      <p class="card-text">Stock: {{this.stock}}</p>
      <p class="card-text">Precio: {{this.price}}</p>
    </div>
  </div>
    </div>
   
    
  </div>
</div>
 

{{/each}}
<center>
  {{#if hasPrevPage}}
    <a href="/api/productos?page={{prevPage}}"><button>anterior</button></a>
  {{/if}}

  {{#if hasNextPage}}
    <a href="/api/productos?page={{nextPage}}"><button>Siguiente</button></a>
  {{/if}}
</center>
